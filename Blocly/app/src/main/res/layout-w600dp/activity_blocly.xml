<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_activity_blocly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_nav_activity_blocly"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:layout_gravity="left"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"/>

        <View
            android:id="@+id/v_activity_blocly_actionbar_padding"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_below="@+id/tb_activity_blocly"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ll_activity_blocly"
                android:layout_weight="1"
            android:layout_below="@id/v_activity_blocly_actionbar_padding">

                <FrameLayout
                    android:id="@+id/fl_activity_blocly"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ll_activity_blocly_bottom_pane"
                android:layout_weight="2"
                android:layout_below="@id/ll_activity_blocly">

                <FrameLayout
                    android:id="@+id/fl_activity_blocly_bottom_pane"
                    android:layout_width="480dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_primary"
                    android:elevation="4dp"/>

            </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>